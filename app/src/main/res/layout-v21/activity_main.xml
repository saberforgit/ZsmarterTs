<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.zsmarter.wangxf.MainActivity">

    <Button
        android:text="弹出式密码键盘"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="66dp"
        android:id="@+id/float_keyboard"
        android:background="@android:color/holo_blue_light"
        android:elevation="7dp" />

    <TextView
        android:text="原生组建开发"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginTop="19dp"
        android:id="@+id/textView2"
        android:textSize="24sp"
        android:textColor="@color/colorAccent" />

    <Button
        android:text="全屏密码键盘"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:id="@+id/full_keyboard"
        android:background="@android:color/holo_blue_light"
        android:elevation="7dp"
        android:layout_below="@id/float_keyboard"
        android:layout_alignParentStart="true" />

    <Button
        android:text="图片水印"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:id="@+id/water_mask"
        android:background="@android:color/holo_blue_light"
        android:elevation="7dp"
        android:layout_below="@id/full_keyboard"
        android:layout_alignParentStart="true" />

</RelativeLayout>
